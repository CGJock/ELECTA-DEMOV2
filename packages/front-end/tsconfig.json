{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../../../shared/*"],
      "@wrappers/*": ["./src/components/components-wrappers/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/context/*"],
      "@data/*": ["./src/data/*"],
      "@translation/*": ["./src/data/translate/*"],
      "@/types/*": ["./src/types/*"],
      "@maps/*": ["./public/data/map/*"],
      "@imgs/*": ["./public/img/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../../../shared/**/*"
  ],
  "exclude": ["node_modules"]
}
