{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "@db/*": ["src/database/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["routes/*"],
      "@fetchers/*": ["src/datafetchers/*"],
      "@data/*": ["data/*"],
      "@listeners/*": ["src/Listeners/*"],
      "@socket/*": ["src/Socketio/*"]
    }
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "routes/**/*.ts",
    "data/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}