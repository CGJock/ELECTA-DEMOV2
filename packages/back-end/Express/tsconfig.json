{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["*.ts", "routes/**/*.ts", "../../../../shared/**/*", "src/database/db.ts", "src/database/seedCandidates.ts", "src/database/initTables.ts", "src/database/ensureDB.ts", "src/database/seedDepartments.ts", "src/database/seedParties.ts"],
  "exclude": ["node_modules", "dist"]
}